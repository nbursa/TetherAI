{
  "name": "tetherai",
  "private": true,
  "workspaces": [
    "packages/*/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm --filter @tetherai/openai build",
    "dev:next": "pnpm --filter @tetherai/openai build && pnpm --filter tetherai-nextjs-example dev",
    "prelint": "pnpm --filter @tetherai/openai run build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "typescript-eslint": "^8.7.0",
    "eslint": "^9.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "globals": "^14.0.0"
  }
}
