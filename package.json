{
  "name": "tetherai",
  "private": true,
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "packages/*/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prebuild": "node scripts/copy-shared.mjs",
    "build": "pnpm run prebuild && pnpm run build:providers",
    "build:providers": "pnpm run prebuild && pnpm run build:openai && pnpm run build:anthropic && pnpm run build:mistral",
    "build:openai": "cd packages/provider/openai && pnpm run build",
    "build:anthropic": "cd packages/provider/anthropic && pnpm run build",
    "build:mistral": "cd packages/provider/mistral && pnpm run build",
    "dev:next": "pnpm run build && cd examples/nextjs && pnpm run dev",
    "prelint": "pnpm run build",
    "lint": "pnpm run lint:check",
    "lint:check": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "copy-shared": "node scripts/copy-shared.mjs",
    "clean": "rm -rf packages/provider/*/dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "typescript-eslint": "^8.7.0",
    "eslint": "^9.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "globals": "^14.0.0",
    "vitest": "^1.0.0"
  }
}
