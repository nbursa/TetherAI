{
  "name": "tetherai",
  "private": true,
  "workspaces": [
    "packages/*/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm --filter @tetherai/provider-openai build",
    "dev:next": "pnpm --filter @tetherai/provider-openai build && pnpm --filter tetherai-nextjs-example dev",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "@typescript-eslint/parser": "^8.7.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1"
  }
}