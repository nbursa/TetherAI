{
  "name": "tetherai",
  "private": true,
  "workspaces": [
    "packages/*/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prebuild": "node scripts/copy-shared.mjs",
    "build": "npm run prebuild && npm run build:providers",
    "build:providers": "npm run prebuild && npm run build:openai && npm run build:anthropic",
    "build:openai": "cd packages/provider/openai && npm run build",
    "build:anthropic": "cd packages/provider/anthropic && npm run build",
    "dev:next": "npm run build && cd examples/nextjs && npm run dev",
    "prelint": "npm run build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "copy-shared": "node scripts/copy-shared.mjs",
    "clean": "rm -rf packages/provider/*/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "typescript-eslint": "^8.7.0",
    "eslint": "^9.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "globals": "^14.0.0"
  }
}
